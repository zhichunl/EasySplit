<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	<Button
	    android:id="@+id/list_item_pay"
	    android:layout_width="50dp"
	    android:layout_height="30dp"
	    android:gravity ="center"
	    android:layout_alignParentLeft="true"
	    android:enabled="true"
	    android:padding="0dp"
	    android:text="Pay"/>	
    <TextView
    	android:id="@+id/list_item_trans_name"
    	android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:layout_toRightOf="@id/list_item_pay"
    	android:paddingLeft="4dp"
    	android:paddingRight="4dp"   	
    	android:textStyle="bold"   	
    	android:text="Somones name"
    />
    <TextView
    	android:id="@+id/list_item_trans_amount"
    	android:layout_width="match_parent"
    	android:layout_height="40dp"
    	android:layout_toRightOf="@id/list_item_trans_name"
    	android:textStyle="bold"
    	android:paddingLeft ="4dp"
    	android:paddingRight ="4dp"    	
    	android:text="amount"
    />
    

</RelativeLayout>
