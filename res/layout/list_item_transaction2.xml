<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView
    	android:id="@+id/list_item_trans2_payer"
    	android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:paddingLeft="4dp"
    	android:paddingRight="4dp"  
    	android:textStyle="bold"   	
    	android:text="Somones name"
    />
    <TextView
    	android:id="@+id/list_item_trans2_action"
    	android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:textStyle="bold"
    	android:paddingLeft ="4dp"
    	android:paddingRight ="4dp"
    	android:layout_toRightOf="@id/list_item_trans2_payer"    	
    	android:text="action"
    />
    <TextView
    	android:id="@+id/list_item_trans2_payee"
    	android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:textStyle="bold"
    	android:paddingLeft ="4dp"
    	android:paddingRight ="4dp" 
    	android:layout_toRightOf="@id/list_item_trans2_action"    	   	
    	android:text="Someones name"
    />
    <TextView
    	android:id="@+id/list_item_trans2_amount"
    	android:layout_width="wrap_content"
    	android:layout_height="40dp"
    	android:textStyle="bold"
    	android:paddingLeft ="4dp"
    	android:paddingRight ="4dp" 
    	android:layout_toRightOf="@id/list_item_trans2_payee"    	   	   	
    	android:text="amount"
    />
</RelativeLayout>