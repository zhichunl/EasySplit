<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	<Button
	    android:id="@+id/list_item_prepaid_add_amount"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity ="center"
	    android:layout_alignParentRight="true"
	    android:enabled="true"
	    android:padding="1dp"
	    android:text="+"/>	
    <TextView
    	android:id="@+id/list_item_prepaid_name"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@id/list_item_prepaid_add_amount"
    	android:paddingLeft="4dp"
    	android:paddingRight="4dp"   	
    	android:textStyle="bold"   	
    	android:text="Somones name"
    />
    <TextView
    	android:id="@+id/list_item_prepaid_amount"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@id/list_item_prepaid_add_amount"
    	android:layout_below="@id/list_item_prepaid_name"
    	android:textStyle="bold"
    	android:paddingLeft ="4dp"
    	android:paddingRight ="4dp"    	
    	android:text="amount"
    />
    

</RelativeLayout>
